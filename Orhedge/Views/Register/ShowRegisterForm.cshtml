@model RegisterViewModel
@inject IStringLocalizer<SharedResource> Localizer;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/signUp.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/additional-methods.min.js"></script>
    <script src="~/js/registration/regform.js" defer></script>
    <title>@Localizer["Registration"]</title>
</head>
<body>
    <div>
        <p class="header">
            <span class="logoOne">OrhEDGE</span><br>
            <span class="logoTwo">Organization&Knowledge</span>
        </p>
    </div>
    <br>
    <div class="blur container">
        <form id="regForm" asp-action="RegisterStudent">
            <div class="form-group row justify-content-center">
                <label for="username" class="col-sm-2 col-form-label">
                    @Localizer["Username"]
                </label>
                <div class="col-sm-4">
                    <input asp-for="Username" id="username" class="form-control" required>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <label for="password" class="col-sm-2 col-form-label">
                    @Localizer["Password"]
                </label>
                <div class="col-sm-4">
                    <input asp-for="Password" id="password" class="form-control" required>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <label for="confirmPassword" class="col-sm-2 col-form-label">
                    @Localizer["ConfirmPassword"]
                </label>
                <div class="col-sm-4">
                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control" required>
                </div>
            </div>
            <input asp-for="RegistrationCode" value="@ViewBag.RegistrationCode">

            <div class="form-group row justify-content-center">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">@Localizer["CreateAccount"]</button>

                </div>
            </div>
        </form>
    </div>
</body>
</html>
